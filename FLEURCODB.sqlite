-- Enable foreign key constraint enforcement
PRAGMA foreign_keys = ON;

CREATE TABLE Users (
    user_id TEXT PRIMARY KEY UNIQUE,
    first_name TEXT,
    last_name TEXT,
    email TEXT,
    main_phone_number TEXT
);

CREATE TABLE WarehouseManagers (
    whm_id TEXT UNIQUE,
    FOREIGN KEY (whm_id) REFERENCES Users(user_id)
);

CREATE TABLE WarehouseWorkers (
    whw_id TEXT UNIQUE,
    FOREIGN KEY (whw_id) REFERENCES Users(user_id)
);

CREATE TABLE Customers (
    customer_id TEXT UNIQUE,
    fax_number TEXT,
    FOREIGN KEY (customer_id) REFERENCES Users(user_id)
);

CREATE TABLE Addresses (
    address_id TEXT PRIMARY KEY UNIQUE,
    street TEXT,
    municipality TEXT,
    province TEXT,
    country TEXT,
    postal_code TEXT,
    address_type TEXT,
    user_id INTEGER,
    FOREIGN KEY (user_id) REFERENCES Users(user_id)
);

CREATE TABLE Orders (
    order_id TEXT PRIMARY KEY UNIQUE,
    order_type TEXT,
    order_status TEXT,
    order_total REAL
);

CREATE TABLE NewOrders (
    neworder_id INTEGER,
    customer_id INTEGER,
    whw_id INTEGER,
    FOREIGN KEY (neworder_id) REFERENCES Orders(order_id),
    FOREIGN KEY (customer_id) REFERENCES Users(user_id),
    FOREIGN KEY (whw_id) REFERENCES Users(user_id)
);

CREATE TABLE BackOrders (
  backorder_id INTEGER,
    whm_id INTEGER,
    user_id INTEGER,
    backorder_cost REAL,
     FOREIGN KEY (whm_id) REFERENCES Users(user_id),
    FOREIGN KEY (backorder_id) REFERENCES Orders(order_id)
);

CREATE TABLE Products (
    product_id TEXT PRIMARY KEY UNIQUE,
    product_name TEXT,
    product_price REAL,
    product_cost REAL,
    product_category TEXT
);
CREATE TABLE Inventory ( 
    inventory_id TEXT PRIMARY KEY UNIQUE,
    product_id,
    FOREIGN KEY (product_id) REFERENCES Products(product_id) ON DELETE CASCADE
    );
CREATE TABLE OrderProducts (
    order_id INTEGER,
    product_id INTEGER,
    product_qty INTEGER,
    FOREIGN KEY (order_id) REFERENCES Orders(order_id),
    FOREIGN KEY (product_id) REFERENCES Products(product_id)
);

CREATE TABLE Invoices (
    invoice_id TEXT PRIMARY KEY UNIQUE,
    total_price REAL,
    invoice_date DATE,
    order_id INTEGER,
    FOREIGN KEY (order_id) REFERENCES Orders(order_id)
);

CREATE TABLE SalesForecasts (
    forecast_id TEXT PRIMARY KEY UNIQUE,
    start_date DATE,
    end_date DATE,
    forecast_stock_level INTEGER,
    product_id INTEGER,
    FOREIGN KEY (product_id) REFERENCES Products(product_id)
);